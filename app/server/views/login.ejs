<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
			
				<!--button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button-->
				<table border="1">
				<tr>
				<td width="90%">
				<h4 class="modal-title" id="myModalLabel"><%= __('login_kyros') %></h4>
				<td width="10%" style="text-align: right">
				<a href="http://view.kyroslbs.com?lang=es"><img src="./img/es.gif"/></a> <a href="http://view.kyroslbs.com?lang=en"><img src="./img/en.gif"/></a>
				<td>
				</tr>
				</table>
			</div> <!-- /.modal-header -->

			<div class="modal-body">
				<form role="form" id="loginForm" action="/" method="POST">
					<div class="form-group">
						<div class="input-group">
							<input type="text" class="form-control" id="uLogin" placeholder="Usuario" name="user">
							<label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>
						</div>
					</div> <!-- /.form-group -->

					<div class="form-group">
						<div class="input-group">
							<input type="password" class="form-control" id="uPassword" placeholder="ContraseÃ±a" name="pass">
							<label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
						</div> <!-- /.input-group -->
					</div> <!-- /.form-group -->


					<div class="checkbox">
					<a href="http://view.kyroslbs.com/lost-password"><%= __('forgot_password') %></a>
					</div> <!-- /.checkbox -->
				</form>

			</div> <!-- /.modal-body -->

			<div class="modal-footer">
				<button class="form-control btn btn-primary">Ok</button>

				
			</div> <!-- /.modal-footer -->

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
$(document).ready(function(){
	
	setTimeout(function(){
  		$('#myModal').modal('show');
	}, 250);

	$('#myModal').modal({backdrop: 'static', keyboard: false}) 	

	if ('<%=msg%>'!='') {
		$('.modal-title').text("<%=msg%>");
		$('.modal-title').css({ "color" : '<%=msg_color%>' });
	}

	$('#uLogin').keypress(function(e) {
            // Enter pressed?
            if(e.which == 10 || e.which == 13) {
                this.form.submit();
            }
    });
	$('#uPassword').keypress(function(e) {
            // Enter pressed?
            if(e.which == 10 || e.which == 13) {
                this.form.submit();
            }
    });

    $('.modal-footer button').click(function(){
		var button = $(this);

		if ( button.attr("data-dismiss") != "modal" ){
			
			$('#loginForm').submit();
		}
	});

	$('#myModal').on('hidden.bs.modal', function (e) {
		var inputs = $('form input');
		var title = $('.modal-title');
		var progressBar = $('.progress-bar');
		var button = $('.modal-footer button');

		inputs.removeAttr("disabled");

		//title.text("Log in");

		progressBar.css({ "width" : "0%" });

		button.removeClass("btn-success")
				.addClass("btn-primary")
				.text("Ok")
				.removeAttr("data-dismiss");
                
	});
});
      
</script>
